{
  "rules": {
    "dbState": {
      "current": {
        ".read": "auth !== null",
        ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },

    "concepts": {
      ".indexOn": ["ownerId", "parentId"],
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptChecks": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptProgress": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptCheckResponses": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "users": {
      "$uid" : {
        ".read": "auth !== null",
        
        "isAdmin" : {
          ".write": "false"
        },
        "adminDisplayMode" : {
          ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
        },
        "data": {
          ".write": "auth !== null && (((root.child('users').child(auth.uid).child('isAdmin').val() == true)) || $uid === auth.uid)"
        },
        "prefs": {
          ".write": "auth !== null && (((root.child('users').child(auth.uid).child('isAdmin').val() == true)) || $uid === auth.uid)"
        }
      }
    }
  }
}