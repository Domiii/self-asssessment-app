{
  "rules": {
    "concepts": {
      ".indexOn": "ownerId",
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptTree": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptProgress": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "conceptResponses": {
      ".read": "auth !== null",
      ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "users": {
      "$uid" : {
        ".read": "auth !== null",
        ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        
        "isAdmin" : {
          ".write": "false"
        },
        "adminDisplayMode" : {
          ".write": "auth !== null && (root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        },
        "data": {
          ".write": "auth !== null && (((root.child('users').child(auth.uid).child('isAdmin').val() == true)) || $uid === auth.uid)"
        }
      }
    }
  }
}